<Window x:Class="UFiles.Email.FileBrowseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select File" Height="350" Width="525">
    <Grid>
        <Button Content="Browse..." Height="23" HorizontalAlignment="Left" Margin="96,76,0,0" Name="btnBrowse" VerticalAlignment="Top" Width="75" Click="btnBrowse_Click" />
        <Label Content="{Binding FileName}" Height="28" HorizontalAlignment="Left" Margin="177,75,0,0" Name="lblFileName" VerticalAlignment="Top" />
    </Grid>
</Window>
