<Window x:Class="UFiles.Email.FilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Files" Height="350" Width="525">
    <Grid>
        <ListView Height="258" HorizontalAlignment="Left" Margin="12,12,0,0" Name="listView1" VerticalAlignment="Top" Width="479" ItemsSource="{Binding Files}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding Name}"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
        <Button Content="Add File" Height="23" HorizontalAlignment="Left" Margin="12,276,0,0" Name="btnAddFile" VerticalAlignment="Top" Width="75" Click="btnAddFile_Click" />
        <Button Content="Upload Files" Height="23" HorizontalAlignment="Right" Margin="0,276,12,0" Name="btnUploadFiles" VerticalAlignment="Top" Width="125" Click="btnUploadFiles_Click" />
    </Grid>
</Window>
