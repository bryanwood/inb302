<Window x:Class="UFiles.Email.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login to uFiles" Height="350" Width="525">
    <Grid>
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="244,143,0,0" Name="btnLogin" VerticalAlignment="Top" Width="75" Click="btnLogin_Click" />
        <TextBox Text="{Binding Username}" Height="23" HorizontalAlignment="Left" Margin="199,82,0,0" Name="textBox1" VerticalAlignment="Top" Width="120" />
        <Label Content="Email" Height="28" HorizontalAlignment="Left" Margin="146,80,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="133,109,0,0" Name="label2" VerticalAlignment="Top" />
        <PasswordBox  Height="23" HorizontalAlignment="Left" Margin="199,114,0,0" Name="passwordBox1" VerticalAlignment="Top" Width="120" />
    </Grid>
</Window>
