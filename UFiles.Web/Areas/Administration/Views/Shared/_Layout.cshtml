<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.less")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
</head>
<body>
<div class="topbar" data-dropdown="dropdown">
    <div class="topbar-inner">
        <div class="container">
            <a class="brand" href="@Url.Action("Index","Home")">UFiles - Admin</a>
            <ul class="nav">
                <li class="dropdown">
                    <a class="dropdown-toggle">Users</a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("All Users","Index","User")</li>
                        <li>@Html.ActionLink("New User","Create","User")</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Files","File","Index")</li>
            </ul>
            <ul class="nav secondary-nav">
                @Html.Partial("_LogOnPartial")
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <div class="content">
        @RenderBody()
    </div>
</div>
   <script src="@Url.Content("~/Scripts/bootstrap-dropdown.js")"></script>
   <script src="@Url.Content("~/Scripts/tablesorter.js")"></script>
</body>
</html>
