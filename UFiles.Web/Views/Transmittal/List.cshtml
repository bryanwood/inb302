@model IEnumerable<UFiles.Domain.Entities.Transmittal>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
    <th>Files</th>
    <th>Recipients</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
    <td>@item.Files.Count</td>
    <td>@item.Recipients.Count</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TransmittalId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TransmittalId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TransmittalId })
        </td>
    </tr>
}

</table>
